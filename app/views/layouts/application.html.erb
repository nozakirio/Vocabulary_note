<!DOCTYPE html>
<html>
  <head>
    <title>VocabularyNote</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <nav class="nav navbar-nav navbar-left"><span>Vocabulary note</span></nav>
        <nav class="nav navbar-nav navbar-right" >
          <ul>
            <% if user_signed_in? %>
              <li>
                <%= link_to user_path(current_user.id) do %>
                  <i class="glyphicon glyphicon-home" ></i>  Home
                <% end %>
              </li>
              <li>
                <%= link_to users_path do %>
                  <i class="glyphicon glyphicon-user" ></i>  Users
                <% end %>
              </li>
              <li>
                <%= link_to  books_path do %>
                  <i class="glyphicon glyphicon-tags" ></i>  Books
                <% end %>
              </li>
              <li>
                <%= link_to  destroy_user_session_path, method: :delete do %>
                  <i class="glyphicon glyphicon-log-out" ></i>  logout
                <% end %>
              </li>
            <% else %>
              <li>
                <%= link_to root_path do %>
                  <i class="glyphicon glyphicon-home" ></i>  Home
                <% end %>
              </li>
              <li>
                <%= link_to home_about_path do %>
                  <i class="glyphicon glyphicon-star" ></i>  About
                <% end %>
              </li>
              <li>
                <%= link_to new_user_registration_path do %>
                  <i class="glyphicon glyphicon-pencil" ></i>  sign up
                <% end %>
              </li>
              <li>
                <%= link_to new_user_session_path do %>
                  <i class="glyphicon glyphicon-log-in" ></i>  login
                <% end %>
              </li>
            <% end %>
          </ul>
        </nav>
      </div>
    </header>
    
    <div class="container">
      <p id="notice"><%= notice %></p>
      <div class="row">
        <%= yield %>
      </div>
    </div>
    
  </body>
</html>
