<p id="notice"><%= notice %></p>
<h2>Book detail</h2>
  <table>
    <tbody>
      <tr>
        <td></td>
        <td><%= @book.title %></td>
        <td><%= @book.body %></td>
        <td><%= @book.created_at.strftime('%Y/%m/%d') %></td>
        <td>
          <% if @book.user == current_user %>
            <%= link_to "Edit", edit_book_path(@book) %>
          <% end %>
        </td>
        <td>
          <% if @book.user == current_user %>
            <%= link_to "Destroy", book_path(@book), method: :delete, data: { confirm: '削除しますか？' } %>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
